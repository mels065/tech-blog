<div class="post">
    <header>
        {{#if comments}}
        <h2>{{title}}</h2>
        {{else}}
        <a href="/post/{{id}}"><h2>{{title}}</h2></a>
        {{/if}}
        <div class="details">Posted by {{user.username}} on {{format_date date_created}}</div>
    </header>

    <p>{{text}}</p>
</div>
